<h3><span class="bg-secondary px-3">商品詳細</span></h3>

<%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg' %>
<table class="table">
  <thead class="">
        <tr><th>商品名</th>             <td><%= @item.name %></td></tr>
        <tr><th>商品説明</th>           <td><%= @item.introduction %></td></tr>
        <tr><th>ジャンル</th>           <td><%= @item.genre.name %></td></tr>
        <tr><th>税込価格（税抜価格）    </th><td><%= @item.price %></td></tr>
        <tr>
          　<th>販売ステータス</th>
          　<% if @item.is_active %>
            <td><p class="text-success">販売中</p></td>
            <% else %>
            <td>販売停止</td>
            <% end %>
        </tr>
  </thead>
</table>


<%= link_to "編集する", edit_admin_item_path, class: "btn btn-primary"%>