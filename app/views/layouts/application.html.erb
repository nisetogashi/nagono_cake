<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
          <div class="container">
               <div class="row">
                  <div class="col">
                      <div class="h-auto">
                          <div class="border">


                            <header>
                                <div class="border-bottom">
                                <nav class="navbar navbar-expand-lg navbar-light">

                                        <h1><span class="border px-5">LOGO</span></h1>


                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                      <div class="collapse navbar-collapse headerlist" id="navbarNavDropdown">
                                          <ul class="navbar-nav ml-auto">

                                                <% if customer_signed_in? %>
                                                <li class="nav-item">
                                                <%= link_to "マイページ", customers_path, class: "btn btn-outline-dark" %>
                                                </li>
                                                <li class="nav-item">
                                                <%= link_to "商品一覧", items_path, class: "btn btn-outline-dark" %>
                                                </li>
                                                <li class="nav-item">
                                                <%= link_to "カート", cart_items_path, class: "btn btn-outline-dark" %>
                                                </li>
                                                <li class="nav-item">
                                                <%= link_to "ログアウト", destroy_customer_session_path, class: "btn btn-outline-dark", method: :delete %>
                                                </li>


                                                <% elsif admin_signed_in? %>
                                                <li class="nav-item">
                                                  <%= link_to "商品一覧", admin_items_path, class: "btn btn-outline-dark"%>
                                                </li>
                                                <li class="nav-item">
                                                  <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-dark" %>
                                                </li>
                                                <li class="nav-item">
                                                  <%= link_to "注文履歴一覧", admin_path, class: "btn btn-outline-dark" %>
                                                </li>
                                                <li class="nav-item">
                                                  <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-dark" %>
                                                </li>
                                                <li class="nav-item">
                                                  <%= link_to "ログアウト", destroy_admin_session_path, class: "btn btn-outline-dark", method: :delete %>
                                                </li>



                                                <% else %>
                                                <li class="nav-item">
                                                <%= link_to "About", about_path, class: "btn btn-outline-dark" %>
                                                </li>
                                                <li class="nav-item">
                                                <%= link_to "商品一覧", items_path, class: "btn btn-outline-dark" %>
                                                </li>
                                                <li class="nav-item">
                                                <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-dark" %>
                                                </li>
                                                <li class="nav-item">
                                                <%= link_to "ログイン", customer_session_path, class: "btn btn-outline-dark" %>
                                                </li>
                                                <% end %>
                                          </ul>
                                      </div>
                                </nav>
                                </div>
                            </header>
                            <main>
                                <div class="border" style="padding:10px;">
                                   <%= yield %>
                                </div>
                            </main>
                            <footer>
                                <div class="border">aaaa</div>
                            </footer>

                      </div>
                  </div>
              </div>
          </div>
  </body>
</html>
