<h1>会員情報編集</h1>

<%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
    <%= f.label:"氏名" %>             <%= f.text_field :last_name, placeholder: "山田" %><%= f.text_field :first_name, placeholder: "太郎" %></br>
    <%= f.label:"フリガナ" %>         <%= f.text_field :last_name_kana, placeholder:"ヤマダ" %><%= f.text_field :first_name_kana, placeholder:"タロウ" %></br>
    <%= f.label:"住所" %>             <%= f.text_field :address, placeholder:"東京都〇〇区" %></br>
    <%= f.label:"電話番号" %>         <%= f.text_field :telephone_number, placeholder:"0000000000" %></br>
    <%= f.label:"メールアドレス" %>   <%= f.email_field :email, placeholder:"aaa@aaa.co.jp" %></br>
    <%= f.submit "編集内容をを保存" %>

<% end %>

  <%= link_to "退会する", customers_path, method: :patch %>