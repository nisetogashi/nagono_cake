<h1>マイページ</h1>

<h3>登録情報</h3>
<%= link_to "編集する", edit_customers_path %>

<table>
  <thead>
    <tr><th>氏名</th>             <td><%= @customer.last_name %><%= @customer.first_name %></td></tr>　<%#@customerはcurrent_customerでも可 %>
    <tr><th>カナ</th>             <td><%= @customer. last_name_kana%><%= @customer.first_name %></td></tr>
    <tr><th>郵便番号</th>         <td><%= @customer. postal_code %></td></tr>
    <tr><th>住所</th>             <td><%= @customer.address %></td></tr>
    <tr><th>電話番号</th>         <td><%= @customer. telephone_number %></td></tr>
    <tr><th>メールアドレス</th>   <td><%= @customer. email %></td></tr>
  </thead>
</table>

<table>
  <thead>
    <tr><th>配送先</th>     <td><%= link_to "一覧を見る", addresses_path %></td></tr>
    <tr><th>注文履歴</th>   <td><%= link_to "一覧を見る", orders_path %></td></tr>
  </thead>
</table>