<h2><span class="bg-secondary px-3">新規会員登録</span></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>


  <table>
    <thead>

      <tr class="field"><th class="col-md-4"><%= f.label :"名前" %> </th>                         <td class="col-md-8"> (姓)<%= f.text_field :last_name, autofocus: true, placeholder:"山田" %>  (名)<%= f.text_field :first_name, autofocus: true , placeholder:"太朗"%> </td></tr>
      <tr class="field"><th class="col-md-4"><%= f.label :"フリガナ" %> </th>                     <td class="col-md-8"> (セイ)<%= f.text_field :last_name_kana, autofocus: true, placeholder:"ヤマダ" %> (メイ)<%= f.text_field :first_name_kana, autofocus: true , placeholder:"タロウ"%></td></tr>
      <tr class="field"><th class="col-md-4"><%= f.label :"メールアドレス" %> </th>               <td class="col-md-8"> <%= f.email_field :email, autofocus: true , placeholder:"aaa@aaa.com"%></td></tr>
      <tr class="field"><th class="col-md-4"><%= f.label :"郵便番号（ハイフンなし）" %> </th>     <td class="col-md-8"> <%= f.text_field :postal_code, autofocus: true , placeholder:"0000000"%></td></tr>
      <tr class="field"><th class="col-md-4"><%= f.label :"住所" %> </th>                         <td class="col-md-8"> <%= f.text_field :address, autofocus: true , placeholder:"東京都渋谷区" %></td></tr>
      <tr class="field"><th class="col-md-4"><%= f.label :"電話番号（ハイフンなし）" %> </th>     <td class="col-md-8"> <%= f.text_field :telephone_number, autofocus: true, placeholder:"000000000" %></td></tr>
      <tr class="field"><th class="col-md-4"><%= f.label :"パスワード（6文字以上）" %> </th>      <td class="col-md-8"> <%= f.text_field :password, autofocus: true %></td></tr>
      <tr class="field"><th class="col-md-4"><%= f.label :"パスワード（確認用）" %></th>          <td class="col-md-8"> <%= f.text_field :password, autofocus: true %></td></tr>

      <tr class="field"><th class="col-md-4"> </th>                                               <td class="col-md-8"> <%= f.submit "新規登録", class: "btn btn-primary"%></td></tr>

    </thead>
  </table>

  <% end %>

  <h2><span class="bg-secondary px-3">既にご登録済みの方はこちら</span></h2>
  <%= link_to "こちら" , customer_session_path %>からログインしてください
