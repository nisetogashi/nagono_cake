<h1>商品一覧</h1>


<% @items.each do |item| %>
<table>
  <thead>
    <tr>
      <th>
        <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg' %>
        <% end %>
  　　　</th>
    </tr>
    <tr><th><%= item.name %></th></tr>
    <tr><th><%= item.price %></th></tr>
  </thead>
</table>
<% end %>

<u><%= paginate @items %></u>